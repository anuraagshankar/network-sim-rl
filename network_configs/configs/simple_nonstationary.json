{
  "name": "Simple Non-Stationary Network",
  "description": "Network with nodes entering and leaving dynamically",
  "network": {
    "n_nodes": 4,
    "n_channels": 4,
    "max_backoff": 7,
    "queue_limit": 10,
    "max_steps": 1000,
    "t_s": 1.0
  },
  "arrival_rates": {
    "type": "fixed",
    "high_priority": [0.6, 0.6],
    "low_priority": [0, 0]
  },
  "channel_interference": {
    "type": "random",
    "clean_channels_ratio": 0.25,
    "noisy_range": {
      "min": 0.0,
      "max": 0.3
    }
  },
  "non_stationary": {
    "enabled": true,
    "nodes": 2,
    "node_entry_prob": [0.05, 0.03],
    "node_exit_prob": [0.03, 0.04],
    "high_priority": [0.008, 0.009],
    "low_priority": [0.03, 0.04]
  }
}

